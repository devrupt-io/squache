# Squache Backend Configuration
# Copy to backend.env and update with your values

# Database
DATABASE_URL=postgres://user:password@postgres:5432/squache

# Server
PORT=3010
NODE_ENV=development
JWT_SECRET=generate-a-secure-random-string-here
JWT_EXPIRES_IN=7d

# URLs
BACKEND_URL=http://localhost:3010
FRONTEND_URL=http://localhost:3011

# CORS
CORS_ORIGIN=http://localhost:3011

# Admin credentials (created on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASS=change-this-secure-password

# Squid Configuration
SQUID_LOG_PATH=/var/log/squid/access.log
SQUID_CACHE_DIR=/var/spool/squid

# Upstream Proxies (optional, JSON array)
# Example: [{"name": "vpn-us", "type": "vpn", "host": "proxy.example.com", "port": 1080}]
UPSTREAM_PROXIES=[]
